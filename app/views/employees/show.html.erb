<p id="notice"><%= notice %></p>

<p>
  <strong>First Name:</strong>
  <%= @employee.first_name %>
</p>

<p>
  <strong>Last Name:</strong>
  <%= @employee.last_name %>
</p>

<p>
  <strong>Employer:</strong>
  <%= "#{@employee.employer.first_name} #{@employee.employer.last_name}" %>
</p>

<p>
  <strong>Timesheets:</strong>
  <table class="table">
    <thead>
      <tr>
        <th>Employee</th>
        <th>Hours</th>
        <th>Date of service</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <%= render @timesheets %>
    </tbody>
  </table>
</p>

<%= link_to 'Edit', edit_employee_path(@employee) %> |
<%= link_to 'Back', employees_path %> |
<%= link_to 'New Timesheet', new_timesheet_path %>
