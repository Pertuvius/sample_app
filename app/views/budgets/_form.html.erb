<%= form_with(model: @budget, local: true) do |form| %>
 <%= render 'shared/error_messages', object: @budget %>

  <div class="field">
    <%= form.label :hours %>
    <%= form.number_field :hours %>
  </div>

  <div class="field">
    <%= form.label :start_date %>
    <%= form.date_select :start_date %>
  </div>

  <div class="field">
    <%= form.label :end_date %>
    <%= form.date_select :end_date %>
  </div>

  <div class="field">
    <%= form.label :employer_id %>
    <%= form.select :employer_id, Employer.all.collect { |e| [e.last_name, e.id] }  %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
