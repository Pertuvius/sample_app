<p id="notice"><%= notice %></p>

<h1>Budgets</h1>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Hours</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Employer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @budgets.each do |budget| %>
      <tr>
        <td><%= budget.id %></td>
        <td><%= budget.hours %></td>
        <td><%= budget.start_date.to_date %></td>
        <td><%= budget.end_date.to_date %></td>
        <td><%= budget.employer.last_name %></td>
        <td><%= link_to 'Show', budget %></td>
        <td><%= link_to 'Edit', edit_budget_path(budget) %></td>
        <td><%= link_to 'Destroy', budget, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @budgets %>

<br>

<%= link_to 'New Budget', new_budget_path %>
