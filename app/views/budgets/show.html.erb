<p id="notice"><%= notice %></p>

<p>
  <strong>Hours:</strong>
  <%= @budget.hours %>
</p>

<p>
  <strong>Start date:</strong>
  <%= @budget.start_date %>
</p>

<p>
  <strong>End date:</strong>
  <%= @budget.end_date %>
</p>

<p>
  <strong>Employer:</strong>
  <%= "#{@budget.employer.last_name} #{@budget.employer.first_name}" %>
</p>

<p>
  <strong>Timesheets:</strong>
  
  <table>
    <thead>
      <tr>
        <th>Employee</th>
        <th>Hours</th>
        <th>Date of service</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <%= render @timesheets %>
    </tbody>
  </table>
  <%= will_paginate @timesheets %>
</p>
</p>

<%= link_to 'Edit', edit_budget_path(@budget) %> |
<%= link_to 'Back', budgets_path %>
