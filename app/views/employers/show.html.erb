<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @employer.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @employer.last_name %>
</p>

<p>
  <strong>Employees:</strong>
  
  <table>
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <%= render @employees %>
    </tbody>
  </table>
  <%= will_paginate @employees %>
</p>

<p>
  <strong>Budgets:</strong>
  
  <table>
    <thead>
      <tr>
        <th>Hours</th>
        <th>Start date</th>
        <th>End date</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <%= render @budgets %>
    </tbody>
  </table>
  <%= will_paginate @budgets %>
</p>
</p>

<%= link_to 'Edit', edit_employer_path(@employer) %> |
<%= link_to 'Back', employers_path %> |
<%= link_to 'New Budget', new_budget_path %>

